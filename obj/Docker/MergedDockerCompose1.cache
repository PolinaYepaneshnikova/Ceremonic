services:
  backend:
    build:
      context: D:\Visual Studio Projects\Ceremonic
      dockerfile: CeremonicBackend/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: CeremonicBackend
      target: base
    container_name: CeremonicBackend
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: ceremonicbackend:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net5.0/CeremonicBackend.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 5000
      target: 80
    tty: true
    volumes:
    - D:\Visual Studio Projects\Ceremonic\CeremonicBackend:/app:rw
    - C:\Users\Admin\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Admin\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Admin\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\Admin\.nuget\packages:/root/.nuget/packages:ro
    - D:\Visual Studio Projects\Ceremonic:/src:rw
  client:
    build:
      context: D:\Visual Studio Projects\Ceremonic\ceremonic-client
      dockerfile: Dockerfile
    image: client
    ports:
    - published: 5001
      target: 3000
  proxy:
    image: nginx:mainline
    ports:
    - published: 80
      target: 80
    volumes:
    - D:\Visual Studio Projects\Ceremonic\nginx.conf:/etc/nginx/nginx.conf:rw
version: '3.4'